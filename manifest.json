{
  "manifest_version": 3,
    "name": "Spost",
    "description": "Break your doomscrooling habits",
    "version": "0.0.1",
    
    "permissions": ["tabs", "contextMenus", "clipboardWrite", "activeTab"],
    
    "browser_specific_settings": {
      "gecko": {
        "id": "borderify@example.com"
      }
    },
    "content_scripts": [
      {
          "matches": ["*://*.instagram.com/*"],
          "js": ["content.js", "scroll.js", "app.js"]
      }
    ]
  }